<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane fx:controller="com.sr.simplemanager.ExportWindowController" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label text="Carpeta de almacenamiento:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="exportFolderPathField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
    <Button text="Seleccionar carpeta" onAction="#handleSelectFolderButtonAction" GridPane.columnIndex="2" GridPane.rowIndex="0"/>

    <Label text="Nombre del archivo:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="exportFileNameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Button fx:id="exportButton" text="Exportar" onAction="#handleExportButtonAction" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
</GridPane>